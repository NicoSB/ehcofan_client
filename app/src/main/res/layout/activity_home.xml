<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:id="@+id/drawer_layout"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        tools:context=".activities.HomeActivity">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/mainGreen"
            android:elevation="4dp"
            android:theme="@style/AppTheme.ToolbarStyle">
        </android.support.v7.widget.Toolbar>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <android.support.v7.widget.CardView
                    android:id="@+id/card_latest_news"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="0dp"
                    card_view:cardCornerRadius="1dp"
                    card_view:cardElevation="2sp"
                    card_view:cardUseCompatPadding="true"
                    android:visibility="gone">
                    <LinearLayout
                        android:id="@+id/container_latest_news"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"/>
                </android.support.v7.widget.CardView>
                <android.support.v7.widget.CardView
                    android:id="@+id/card_last_match"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="0dp"
                    card_view:cardCornerRadius="1dp"
                    card_view:cardElevation="2sp"
                    card_view:cardUseCompatPadding="true"
                    android:visibility="gone">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_alignParentTop="true">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/mainGreen"
                            android:padding="8dp"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:text="@string/last_match"/>
                        <LinearLayout
                            android:id="@+id/container_last_match"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"/>
                    </LinearLayout>
                </android.support.v7.widget.CardView>
                <android.support.v7.widget.CardView
                    android:id="@+id/card_next_match"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="0dp"
                    card_view:cardCornerRadius="1dp"
                    card_view:cardElevation="2sp"
                    card_view:cardUseCompatPadding="true"
                    android:visibility="gone">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_alignParentTop="true">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/mainGreen"
                            android:padding="8dp"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:text="@string/next_match"/>
                        <LinearLayout
                            android:id="@+id/container_next_match"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">
                            <android.support.v4.widget.ContentLoadingProgressBar
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_gravity="center"/>
                        </LinearLayout>
                    </LinearLayout>
                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:id="@+id/card_nlb"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    card_view:cardCornerRadius="1dp"
                    card_view:cardElevation="2sp"
                    card_view:cardUseCompatPadding="true"
                    android:onClick="startStandingsActivity">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:background="@color/white">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/team_nlb"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:textColor="@color/mainGreen"
                            android:layout_marginStart="8dp"
                            android:layout_marginEnd="8dp"
                            android:layout_marginBottom="0dp"
                            android:layout_marginTop="8dp"/>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:divider="@drawable/divider_grey"
                            android:padding="8dp"
                            android:dividerPadding="1dp"
                            android:showDividers="middle"
                            android:baselineAligned="false">
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:orientation="vertical">
                            <TextView
                                android:id="@+id/txt_team_placement"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@android:color/tertiary_text_dark"
                                android:textSize="@dimen/player_stats_text_size"
                                android:textStyle="bold"
                                android:text="@string/player_placeholder_number"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="8dp"
                                android:layout_marginEnd="8dp"
                                android:layout_marginBottom="8dp"
                                android:layout_marginTop="0dp"
                                android:textColor="@android:color/black"
                                android:textStyle="bold"
                                android:text="@string/team_placement"/>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:orientation="vertical">
                            <TextView
                                android:id="@+id/txt_team_games"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="@dimen/player_stats_text_size"
                                android:textStyle="bold"
                                android:text="@string/player_placeholder_number"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="8dp"
                                android:layout_marginEnd="8dp"
                                android:layout_marginBottom="8dp"
                                android:layout_marginTop="0dp"
                                android:textColor="@android:color/black"
                                android:textStyle="bold"
                                android:text="@string/team_games"/>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:orientation="vertical">
                            <TextView
                                android:id="@+id/txt_team_points"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@android:color/tertiary_text_dark"
                                android:textSize="@dimen/player_stats_text_size"
                                android:textStyle="bold"
                                android:text="@string/player_placeholder_number"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="8dp"
                                android:layout_marginEnd="8dp"
                                android:layout_marginBottom="8dp"
                                android:layout_marginTop="0dp"
                                android:textColor="@android:color/black"
                                android:textStyle="bold"
                                android:text="@string/team_points"/>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">
                            <TextView
                                android:id="@+id/txt_team_goals"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@android:color/tertiary_text_dark"
                                android:textSize="@dimen/player_stats_text_size"
                                android:textStyle="bold"
                                android:text="@string/player_placeholder_number"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="8dp"
                                android:layout_marginEnd="8dp"
                                android:layout_marginBottom="8dp"
                                android:layout_marginTop="0dp"
                                android:textColor="@color/mainGreen"
                                android:textStyle="bold"
                                android:text="@string/nlb_tore"/>
                            </LinearLayout>
                        </LinearLayout>
                    </LinearLayout>
                </android.support.v7.widget.CardView>
            </LinearLayout>
       </ScrollView>
    </LinearLayout>
    <android.support.design.widget.NavigationView
        android:id="@+id/navigation_view"
        android:layout_height="match_parent"
        android:layout_width="@dimen/drawer_navigation_width"
        android:layout_gravity="start"
        android:background="@color/mainGreen"
        app:itemIconTint="@color/drawer_state_text"
        app:itemTextColor="@color/drawer_state_text"
        app:itemBackground="@drawable/drawer_state_bg"
        app:menu="@menu/menu_drawer"/>
</android.support.v4.widget.DrawerLayout>