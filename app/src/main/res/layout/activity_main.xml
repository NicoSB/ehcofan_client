<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/mainGreen"
    tools:context=".activities.MainActivity">
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/top_main"/>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/fragment_container"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_alignParentBottom="true"
        android:layout_gravity="center_horizontal"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center_horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:padding="4dp"
                android:textSize="12sp"
                android:text="@string/news"
                android:drawableTop="@drawable/ic_subject_white_48dp"
                android:onClick="openNewsActivity"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:padding="4dp"
                android:textSize="12sp"
                android:text="@string/title_activity_schedule"
                android:drawableTop="@drawable/ic_assignment_white_48dp"
                android:onClick="openScheduleActivity"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:padding="4dp"
                android:textSize="12sp"
                android:text="@string/title_activity_roster"
                android:drawableTop="@drawable/ic_group_white_48dp"
                android:onClick="openRosterActivity"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:padding="4dp"
                android:textSize="12sp"
                android:text="@string/title_activity_standings"
                android:drawableTop="@drawable/ic_list_white_48dp"
                android:onClick="openStandingsActivity"/>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>