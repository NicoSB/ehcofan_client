<?xml version="1.0" encoding="utf-8"?>

<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/ll_standings"
        android:orientation="vertical" android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/mainGreen"
            android:elevation="4dp"
            android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
            app:popupTheme="@style/ThemeOverlay.AppCompat.Light"/>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TableLayout
                android:id="@+id/container_standings"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginStart="24dp"
                android:layout_marginEnd="24dp"
                android:stretchColumns="1,2,3,4">
                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="56dp">
                    <TextView
                        android:layout_height="match_parent"
                        android:layout_width="wrap_content"
                        android:gravity="end"
                        android:layout_marginEnd="24dp"
                        android:text="@string/rank"/>
                    <TextView
                        android:layout_height="match_parent"
                        android:layout_width="wrap_content"
                        android:layout_marginEnd="24dp"
                        android:text="@string/team_name"/>
                    <TextView
                        android:layout_height="match_parent"
                        android:layout_width="wrap_content"
                        android:gravity="end"
                        android:layout_marginEnd="24dp"
                        android:text="@string/games"/>
                    <TextView
                        android:layout_height="match_parent"
                        android:layout_width="wrap_content"
                        android:gravity="end"
                        android:layout_marginEnd="24dp"
                        android:text="@string/wins"/>
                    <TextView
                        android:layout_height="match_parent"
                        android:layout_width="wrap_content"
                        android:gravity="end"
                        android:layout_marginEnd="24dp"
                        android:text="@string/ot_wins"/>
                    <TextView
                        android:layout_height="match_parent"
                        android:layout_width="wrap_content"
                        android:gravity="end"
                        android:layout_marginEnd="24dp"
                        android:text="@string/ot_losses"/>
                    <TextView
                        android:layout_height="match_parent"
                        android:layout_width="wrap_content"
                        android:gravity="end"
                        android:layout_marginEnd="24dp"
                        android:text="@string/losses"/>
                    <TextView
                        android:layout_height="match_parent"
                        android:layout_width="wrap_content"
                        android:layout_marginEnd="24dp"
                        android:gravity="end"
                        android:text="@string/goals"/>
                    <TextView
                        android:layout_height="match_parent"
                        android:layout_width="wrap_content"
                        android:gravity="end"
                        android:text="@string/points"/>
                </TableRow>
            </TableLayout>
        </ScrollView>

    </LinearLayout>

    <!-- The navigation drawer -->
    <android.support.design.widget.NavigationView
        android:id="@+id/navigation_view"
        android:layout_height="match_parent"
        android:layout_width="@dimen/drawer_navigation_width"
        android:layout_gravity="start"
        android:background="@color/mainGreen"
        app:itemIconTint="@color/drawer_state_text"
        app:itemTextColor="@color/drawer_state_text"
        app:itemBackground="@drawable/drawer_state_bg"
        app:menu="@menu/menu_drawer"/>
</android.support.v4.widget.DrawerLayout>